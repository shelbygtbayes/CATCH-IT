<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Yellow"
        android:orientation="vertical"
        tools:context="com.example.catchit.MainActivity"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:src="@drawable/catch_it" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:text="Catch It is an To-do-Task Application based on SQLite Database"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:text="Now You can Catch up Your Tasks More Conveniently"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="8dp"
            android:textColor="@color/Black"
            android:textStyle="italic"
            android:text="Any Task Can be Updated on a Nice Yellow Pad just by One Click"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="By\nKanishka Tyagi"
            android:layout_gravity="right"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>